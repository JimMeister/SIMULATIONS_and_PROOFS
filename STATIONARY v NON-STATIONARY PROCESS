#STATIONARY:

n <- 1e4
b <- 1
rho <- 0.2


x <- c(0,replicate(n,0))
for (i in 2:n){
  x[i] <- rho * x[i - 1] + b * rnorm(1)
}
plot(x, type = "l")

# or with higher rho:

n <- 1e4
b <- 1
rho <- 0.99


x <- c(0,replicate(n,0))
for (i in 2:n){
  x[i] <- rho * x[i - 1] + b * rnorm(1)
}
plot(x, type = "l")

# NON STATIONARY:

n <- 1e4
b <- 1
rho <- 1


x <- c(0,replicate(n,0))
for (i in 2:n){
  x[i] <- rho * x[i - 1] + b * rnorm(1)
}
plot(x, type = "l")
